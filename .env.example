# Environment Configuration for Belgaum Today
# Copy this file to .env.local for development
# For production, set these in Hostinger's environment variables

# =============================================================================
# DATABASE CONFIGURATION (MySQL)
# =============================================================================
# Hostinger provides these credentials in your hosting panel
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_database_password
DATABASE_NAME=your_database_name

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Production URL (required for SEO, sitemap, robots.txt)
NEXT_PUBLIC_SITE_URL=https://belgaum.today
NEXT_PUBLIC_SITE_NAME=Belgaum Today

# Node environment (automatically set by Hostinger)
NODE_ENV=production

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Generate a strong secret: openssl rand -base64 32
# CRITICAL: Change this in production!
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

# =============================================================================
# CRON JOB SECRETS
# =============================================================================
# Generate unique secrets for each cron job
# Used to secure cron endpoints from unauthorized access
# Generate: openssl rand -base64 32
CRON_SECRET=your-cron-secret-for-rss-feeds
TRENDING_CRON_SECRET=your-trending-cron-secret

# =============================================================================
# AI/LLM CONFIGURATION (Optional - for AI features)
# =============================================================================
# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000
OPENAI_REQUEST_TIMEOUT_MS=45000

# =============================================================================
# ANALYTICS & TRACKING (Optional)
# =============================================================================
# Google Analytics (get from https://analytics.google.com)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google AdSense (get from https://www.google.com/adsense)
NEXT_PUBLIC_ADSENSE_ID=ca-pub-XXXXXXXXXXXXXXXX

# Meta Pixel (get from https://business.facebook.com/events_manager)
NEXT_PUBLIC_META_PIXEL_ID=XXXXXXXXXXXXXXXX

# =============================================================================
# SEO VERIFICATION (Optional)
# =============================================================================
# Google Search Console verification
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your-google-verification-code

# Bing Webmaster Tools verification
NEXT_PUBLIC_BING_SITE_VERIFICATION=your-bing-verification-code

# =============================================================================
# DEVELOPMENT ONLY (Do not set in production)
# =============================================================================
# Uncomment for local development with Docker
# DATABASE_HOST=127.0.0.1
# DATABASE_PORT=3307
# DATABASE_USER=root
# DATABASE_PASSWORD=root
# DATABASE_NAME=belgaum_today
